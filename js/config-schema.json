{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "NIGHTSCOUT": {
      "type": "object",
      "properties": {
        "URL": {
          "type": "string",
          "minLength": 10,
          "pattern": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&\\/\\/=]*)"
        },
        "TOKEN": {
          "type": "string",
          "minLength": 10
        },
        "INTERVAL": {
          "type": "integer"
        }
      },
      "required": [
        "URL",
        "TOKEN",
        "INTERVAL"
      ]
    },
    "BG": {
      "type": "object",
      "properties": {
        "HIGH": {
          "type": "number",
          "minimum": 1
        },
        "LOW": {
          "type": "number",
          "minimum": 1
        },
        "TARGET": {
          "type": "object",
          "properties": {
            "TOP": {
              "type": "number",
              "minimum": 1
            },
            "BOTTOM": {
              "type": "number",
              "minimum": 1
            }
          },
          "required": [
            "TOP",
            "BOTTOM"
          ]
        }
      },
      "required": [
        "HIGH",
        "LOW",
        "TARGET"
      ]
    },
    "WIDGET": {
      "type": "object",
      "properties": {
        "SHOW_AGE": {
          "type": "boolean"
        },
        "AGE_LIMIT": {
          "type": "integer",
          "minimum": 0
        },
        "OPACITY": {
          "type": "integer",
          "minimum": 10,
          "maximum": 100,
          "multipleOf": 10
        },
        "POSITION": {
          "type": "object",
          "properties": {
            "x": {
              "type": "integer"
            },
            "y": {
              "type": "integer"
            }
          },
          "required": [
            "x",
            "y"
          ]
        }
      },
      "required": [
        "AGE_LIMIT",
        "OPACITY",
        "POSITION"
      ]
    },
    "LAST_UPDATE_REQUEST": {
      "type": "string"
    }
  },
  "required": [
    "NIGHTSCOUT",
    "BG",
    "WIDGET"
  ],
  "additionalProperties": false
}