{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "NIGHTSCOUT": {
      "type": "object",
      "properties": {
        "URL": {
          "type": "string",
          "minLength": 10,
          "pattern": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&\\/\\/=]*)"
        },
        "TOKEN": {
          "type": "string",
          "minLength": 10
        },
        "INTERVAL": {
          "type": "integer",
          "default": 60
        }
      },
      "required": [
        "URL",
        "TOKEN",
        "INTERVAL"
      ]
    },
    "BG": {
      "type": "object",
      "properties": {
        "HIGH": {
          "type": "number",
          "minimum": 1,
          "default": 10
        },
        "LOW": {
          "type": "number",
          "minimum": 1,
          "default": 3.5
        },
        "TARGET": {
          "type": "object",
          "properties": {
            "TOP": {
              "type": "number",
              "minimum": 1,
              "default": 8
            },
            "BOTTOM": {
              "type": "number",
              "minimum": 1,
              "default": 4
            }
          },
          "required": [
            "TOP",
            "BOTTOM"
          ]
        }
      },
      "required": [
        "HIGH",
        "LOW",
        "TARGET"
      ]
    },
    "WIDGET": {
      "type": "object",
      "properties": {
        "SHOW_AGE": {
          "type": "boolean"
        },
        "AGE_LIMIT": {
          "type": "integer",
          "default": 20
        },
        "OPACITY": {
          "type": "integer",
          "minimum": 10,
          "maximum": 100,
          "multipleOf": 10,
          "default": 100
        },
        "POSITION": {
          "type": "object",
          "properties": {
            "x": {
              "type": "integer",
              "default": 1000
            },
            "y": {
              "type": "integer",
              "default": 100
            }
          },
          "required": [
            "x",
            "y"
          ]
        }
      },
      "required": [
        "AGE_LIMIT",
        "OPACITY",
        "POSITION"
      ]
    },
    "LAST_UPDATE_REQUEST": {
      "type": "string",
      "default": "1/1/2000"
    }
  },
  "required": [
    "NIGHTSCOUT",
    "BG",
    "WIDGET",
    "LAST_UPDATE_REQUEST"
  ],
  "additionalProperties": false
}
